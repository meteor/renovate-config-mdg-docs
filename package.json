{
  "name": "renovate-config-mdg-docs",
  "version": "1.0.1",
  "description": "Renovate configuration for MDG documentation properties.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "github:meteor/renovate-config-mdg-docs",
  "keywords": [],
  "author": "",
