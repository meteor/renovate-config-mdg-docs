{
  "name": "renovate-config-mdg-docs",
  "version": "1.0.6",
  "description": "Renovate configuration for MDG documentation properties.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "github:meteor/renovate-config-mdg-docs",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "renovate-config": {
    "default": {
      "extends": [
        "config:base"
      ],
      "schedule": "every weekend",
      "timezone": "America/Los_Angeles",
      "updateNotScheduled": false,
      "prHourlyLimit": 10,
      "assignees": [
        "abernix"
      ],
      "nvm": {
        "automerge": true
      },
      "packageRules": [
        {
          "packagePatterns": [
            "\\bhexo\\b",
            "\\bgatsby\\b",
            "chexo"
          ],
          "groupName": "Documentation infrastructure",
          "prCreation": "not-pending",
          "prNotPendingHours": 1,
          "automerge": true
        },
        {
          "groupName": "Documentation theme",
          "packageNames": [
            "gatsby-theme-apollo-docs",
            "meteor-theme-hexo"
          ],
          "schedule": "at any time",
          "prCreation": "not-pending",
          "prNotPendingHours": 1,
          "automerge": "true",
          "updateNotScheduled": true
        }
      ]
    }
  }
}
